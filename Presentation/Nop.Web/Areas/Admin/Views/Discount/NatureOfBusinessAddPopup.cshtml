@model AddCustomerToNatureOfBusinessSearchModel

@{
    Layout = "_AdminPopupLayout";

    //page title
    ViewBag.PageTitle = T("Admin.Customers.NatureOfBusiness.AddNew").Text;
}

@if (ViewBag.RefreshPage == true)
{
    <script>
        try {window.opener.document.forms['@(Context.Request.Query["formId"])'].@(Context.Request.Query["btnId"]).click();}
        catch (e){}
        window.close();
    </script>
}
else
{
    <form asp-controller="NatureOfBusiness" asp-action="NatureOfBusinessAddPopup"
          asp-route-manufacturerId="@Context.Request.Query["natureOfBusinessId"]"
          asp-route-btnId="@Context.Request.Query["btnId"]"
          asp-route-formId="@Context.Request.Query["formId"]">
        <div class="content-header clearfix">
            <h1 class="float-left">
                @T("Admin.Customers.NatureOfBusiness.AddNew")
            </h1>
            <div class="float-right">
                &nbsp;
            </div>
        </div>

         <section class="content">
            <div class="container-fluid">
                <div class="form-horizontal">
                    <div class="cards-group">
                        <div class="card card-default card-search card-popup">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group row">
                                            <div class="col-sm-5">
                                                <nop-label asp-for="SearchNatureOfBusinessName" />
                                            </div>
                                            <div class="col-sm-7">
                                                <nop-editor asp-for="SearchNatureOfBusinessName" />
                                            </div>
                                        </div>
                                        @*<div class="form-group row" @(Model.AvailableCategories.SelectionIsNotPossible() ? Html.Raw("style=\"display:none\"") : null)>*@
                                        <div class="form-group row">
                                            <div class="col-sm-5">
                                                <nop-label asp-for="SearchUserName" />
                                            </div>
                                            <div class="col-sm-7">
                                                <nop-editor asp-for="SearchUserName" />
                                            </div>
                                        </div>
                                        @*<div class="form-group row" @(Model.AvailableVendors.SelectionIsNotPossible() ? Html.Raw("style=\"display:none\"") : null)>*@
                                        <div class="form-group row">
                                            <div class="col-sm-5">
                                                <nop-label asp-for="SearchEmail" />
                                            </div>
                                            <div class="col-sm-7">
                                                <nop-editor asp-for="SearchEmail"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <button type="button" id="search-natureOfBusiness" class="btn btn-primary btn-search">
                                            <i class="fas fa-search"></i>
                                            @T("Admin.Common.Search")
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card card-default">
                            <div class="card-body">
                                @await Html.PartialAsync("Table", new DataTablesModel
                                {
                                    Name = "natureOfBusiness-grid",
                                    UrlRead = new DataUrl("NatureOfBusinessAddPopupList", "NatureOfBusiness", null),
                                    SearchButtonId = "search-natureOfBusiness",
                                    Length = Model.PageSize,
                                    LengthMenu = Model.AvailablePageSizes,
                                    Filters = new List<FilterParameter>
                                    {
                                         new FilterParameter(nameof(Model.SearchNatureOfBusinessName)),
                                         new FilterParameter(nameof(Model.SearchUserName)),
                                         new FilterParameter(nameof(Model.SearchEmail))
                                    },
                                    ColumnCollection = new List<ColumnProperty>
                                    {
                                        new ColumnProperty(nameof(NatureOfBusinessModel.Id))
                                        {
                                            IsMasterCheckBox = true,
                                            Render = new RenderCheckBox(nameof(AddCustomerToNatureOfBusinessModel.SelectedUserName)),
                                            ClassName =  NopColumnClassDefaults.CenterAll,
                                            Width = "50"
                                        },
                                        new ColumnProperty(nameof(NatureOfBusinessModel.NatureOfBusinessName))
                                        {
                                            Title = T("Admin.Customers.NatureOfBusiness.Fields.NatureOfBusinessName").Text
                                        },
                                        new ColumnProperty(nameof(NatureOfBusinessModel.Published))
                                        {
                                            Title = T("Admin.Customers.NatureOfBusiness.Fields.Published").Text,
                                            Width = "100",
                                            ClassName = NopColumnClassDefaults.CenterAll,
                                            Render = new RenderBoolean()
                                        }
                                    }
                                })
                            </div>
                            <div class="card-footer">
                                <button type="submit" name="save" class="btn btn-primary">
                                    <i class="far fa-save"></i>
                                    @T("Admin.Common.Save")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
}